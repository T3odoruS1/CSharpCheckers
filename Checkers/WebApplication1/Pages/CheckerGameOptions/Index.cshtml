@page
@model WebApplication1.Pages.CheckerGameOptions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CheckerGameOptions[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckerGameOptions[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckerGameOptions[0].Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckerGameOptions[0].TakingIsMandatory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckerGameOptions[0].WhiteStarts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckerGameOptions[0].GameCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CheckerGameOptions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TakingIsMandatory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhiteStarts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameCount)
            </td>
            <td>
                @if (item.GameCount > 0)
                {
                    <text>Can't delete. There are games using these options</text>
                }
                else
                {
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>

                }
                
            </td>
        </tr>
}
    </tbody>
</table>
