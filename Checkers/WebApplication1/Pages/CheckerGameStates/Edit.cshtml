@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CheckerGameState</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CheckerGameState.Id" />
            <div class="form-group">
                <label asp-for="CheckerGameState.CreatedAt" class="control-label"></label>
                <input asp-for="CheckerGameState.CreatedAt" class="form-control" />
                <span asp-validation-for="CheckerGameState.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CheckerGameState.NextMoveByBlack" /> @Html.DisplayNameFor(model => model.CheckerGameState.NextMoveByBlack)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CheckerGameState.SerializedGameBoard" class="control-label"></label>
                <input asp-for="CheckerGameState.SerializedGameBoard" class="form-control" />
                <span asp-validation-for="CheckerGameState.SerializedGameBoard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckerGameState.CheckerGameId" class="control-label"></label>
                <select asp-for="CheckerGameState.CheckerGameId" class="form-control" asp-items="ViewBag.CheckerGameId"></select>
                <span asp-validation-for="CheckerGameState.CheckerGameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

